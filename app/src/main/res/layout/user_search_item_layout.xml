<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="32dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_user_profile_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/profile">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/search_user_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Omprakash"
        android:textSize="16sp"
        android:layout_toRightOf="@id/search_user_profile_image"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_user_profile_status"
        android:text="Online"
        android:layout_toRightOf="@id/search_user_profile_name"
        android:layout_centerInParent="true"
        android:textSize="8dp"
        android:layout_marginLeft="32dp">
    </TextView>

</RelativeLayout>